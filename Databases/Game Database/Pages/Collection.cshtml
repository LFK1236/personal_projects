@page
@using Game_Database.Pages
@model Game_Database.Pages.CollectionModel
@{
    ViewData["Title"] = "Game Collection";
}

<head>
</head>
<body>
    <h1>@ViewData["Title"]</h1>
    <form method="post" class="card p-3">
        <div class="row">
            <div asp-validation-summary="All"></div>
        </div>
        <div class="form-group mb-0 align-middle">
            <label asp-for="NewGame.Title">Title<span style="color:red">*</span></label>
            <input type="text" asp-for="NewGame.Title" class="mr-5" />
            <label asp-for="NewGame.Release">Release Year<span style="color:red">*</span></label>
            <input asp-for="NewGame.Release" class="mr-5" />
            <button class="btn btn-primary">Add</button>
        </div>
    </form>
    <table class="table mt-5">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Release Year</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var g in Model.games)
            {
            <tr>
                <td>@g.Title</td>
                <td>@g.Release</td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-title="@g.Title" asp-route-release_year="@g.Release">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
            }
        </tbody>
    </table>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}